pipeline {
    agent any

    environment {
        GIT_URL = 'https://github.com/KAUSHAL9893/devsecops1.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: "${GIT_URL}", branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    bat 'docker build -t devsecops-image:latest .'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests inside the Docker container
                    bat 'docker run --rm devsecops-image:latest python -m unittest discover -s tests'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy the Docker container
                    // Stop the existing container if it's running
                    bat '''
                    if docker ps -q -f name=devsecops-container; then (
                        docker stop devsecops-container
                        docker rm devsecops-container
                    )
                    REM Run the new container
                    docker run -d --name devsecops-container -p 80:80 devsecops-image:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
        always {
            cleanWs()
        }
    }
}
